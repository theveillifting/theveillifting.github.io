  <script>
    const $ = s => document.querySelector(s);
    const ls = { get:(k,d)=>JSON.parse(localStorage.getItem(k)??JSON.stringify(d)), set:(k,v)=>localStorage.setItem(k,JSON.stringify(v)) };
    $('#year').textContent=new Date().getFullYear();
    $('#instaLink').href="https://instagram.com/theveillifting";
    $('#contactInsta').href="https://instagram.com/theveillifting";
    $('#emailLink').href="mailto:rubyeyes22@hotmail.com";
    ls.set('instagram','theveillifting');
    ls.set('email','rubyeyes22@hotmail.com');

    $('#saveHandle').onclick=()=>{ const h=$('#instagramHandle').value.trim(); if(h){ ls.set('instagram',h); $('#instaLink').href=`https://instagram.com/${h}`; $('#contactInsta').href=`https://instagram.com/${h}`; } };
    $('#saveEmail').onclick=()=>{ const e=$('#emailAddress').value.trim(); if(e.includes('@')){ ls.set('email',e); $('#emailLink').href=`mailto:${e}`; } };

    let blogPosts=ls.get('blogPosts',[]); const blogList=$('#blogList');
    function renderBlog(){ blogList.innerHTML=''; blogPosts.forEach(p=>{ const d=document.createElement('div'); d.className='post'; d.innerHTML=`<h3>${p.title}</h3><p>${p.body}</p>`; blogList.appendChild(d); }); }
    $('#addBlog').onclick=()=>{ const t=$('#blogTitle').value.trim(), b=$('#blogBody').value.trim(); if(t&&b){ blogPosts.push({title:t,body:b}); ls.set('blogPosts',blogPosts); renderBlog(); } };
    renderBlog();

    let journalEntries=ls.get('journalEntries',[]); const journalList=$('#journalList'); let vis=false;
    function renderJournal(){ journalList.innerHTML=''; journalEntries.forEach(p=>{ const d=document.createElement('div'); d.className='entry'; d.innerHTML=`<h3>${p.title}</h3><p>${p.body}</p>`; journalList.appendChild(d); }); }
    $('#addJournal').onclick=()=>{ const t=$('#journalTitle').value.trim(), b=$('#journalBody').value.trim(); if(t&&b){ journalEntries.push({title:t,body:b}); ls.set('journalEntries',journalEntries); if(vis)renderJournal(); } };
    $('#togglePrivate').onclick=()=>{ vis=!vis; journalList.hidden=!vis; if(vis)renderJournal(); };
  </script>
